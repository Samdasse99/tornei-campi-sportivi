<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rettang"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Risultati"
                android:textSize="50sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Scegli la struttura:"
                android:textSize="20sp"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/btn_risultato1"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:text="Struttura 1"
                android:textColor="#ffff"
                android:drawableRight="@drawable/mappa"
                android:drawableLeft="@drawable/imgcampo"
                android:layout_marginTop="20sp"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodeText" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:text="Struttura 2"
                android:textColor="#ffff"
                android:drawableRight="@drawable/mappa"
                android:drawableLeft="@drawable/imgcampo"
                android:layout_marginTop="20sp"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodeText" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>

