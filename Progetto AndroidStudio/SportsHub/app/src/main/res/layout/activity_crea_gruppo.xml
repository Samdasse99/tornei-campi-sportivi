<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rettang"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crea il tuo gruppo"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/margin"
            android:text="Nome del gruppo:" />

        <EditText
            android:id="@+id/EditNome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_border"
            android:layout_marginHorizontal="@dimen/margin"
            android:hint="Inserisci nome gruppo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/margin"
            android:text="Referente del gruppo" />

        <EditText
            android:id="@+id/EditCognome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_border"
            android:layout_marginHorizontal="@dimen/margin"
            android:hint="Inserisci referente" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/margin"
            android:text="Cerca utente" />

        <EditText
            android:id="@+id/EditIndirizzo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_border"
            android:layout_marginHorizontal="@dimen/margin"
            android:hint="Cerca utente" />


        <Button

            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="370dp"
            android:layout_marginHorizontal="@dimen/margin"
            android:layout_span="2"
            android:text="Crea Gruppo" />

    </LinearLayout>
</ScrollView>
