<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filtri">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Nei centri che seguo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:text="Filtri"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_below="@id/textView4"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Con posti disponibili" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_below="@id/textView6"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Campo coperto" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Con amici iscritti" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/textView6"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-46dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/checkBox2"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/checkBox3"/>

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/checkBox4"/>

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/checkBox5"/>

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/checkBox6"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@id/checkBox7"
        android:layout_marginTop="7dp"/>

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@id/checkBox8"
        android:layout_marginTop="7dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_progetto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Con portieri" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginStart="100dp"
        android:textSize="20dp"
        android:text="Calcetto" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Calcio a 7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Calcio a 11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:textSize="20dp"
        android:text="pallavolo" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/checkBox9"
        android:layout_marginTop="7dp"
        android:layout_marginStart="300dp"
        android:src="?android:attr/listChoiceIndicatorSingle" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="basket" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/imageButton"
        android:layout_marginTop="7dp"
        android:layout_marginStart="300dp"
        android:src="?android:attr/listChoiceIndicatorSingle" />

</RelativeLayout>

